server {
        # Forward all port 80 traffic to port 443
        listen              80;
        server_name         openchemistry.kitware.com;
        return              301 https://$server_name$request_uri;
}
server {
        listen              443;

        root                /opt/mongochem/client/dist;
        index               index.html;

        server_name         openchemistry.kitware.com;

        ssl                 on;
        ssl_certificate     /etc/ssl/openchemistry.pem;
        ssl_certificate_key /etc/ssl/openchemistry.key;

        location / {
                # First attempt to serve request as file, then
                # as directory, then fall back to displaying a 404.
                try_files           $uri $uri/ =404;
        }

        # Pass stuff through to Girder
        location /api/v1 {
                proxy_pass          http://localhost:8080/api/v1;
                include             /etc/nginx/proxy_params;
        }
        location /static {
                proxy_pass          http://localhost:8080/static;
        }
}
